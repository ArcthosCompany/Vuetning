{
  "name": "vuetning",
  "description": "Salesforce Lightning Design System framework for Vue.js 2",
  "version": "0.0.0",
  "main": "./dist/vuetning.common.js",
  "author": "Marcelo A. T. Gomes <marceloatg@outlook.com>",
  "license": "MIT",
  "private": false,
  "keywords": [
    "vue",
    "slds",
    "lightning",
    "salesforce"
  ],
  "homepage": "https://arcthoscompany.github.io/Vuetning/",
  "repository": {
    "type": "git",
    "url": "https://github.com/ArcthosCompany/Vuetning"
  },
  "bugs": {
    "url": "https://github.com/ArcthosCompany/Vuetning/issues"
  },
  "files": [
    "dist/*",
    "src/*",
    "public/*",
    "*.json",
    "*.js"
  ],
  "scripts": {
    "serve": "vue-cli-service serve",
    "serve:storybook": "start-storybook -s ./public -p 6006",
    "build": "vue-cli-service build",
    "build:storybook": "build-storybook",
    "bundle": "vue-cli-service build --target lib --name vuetning ./src/vuetning.js",
    "lint": "vue-cli-service lint --no-fix",
    "lint:fix": "vue-cli-service lint",
    "lint:teamcity": "vue-cli-service lint --no-fix --format ./node_modules/eslint-teamcity/index.js",
    "test:unit": "vue-cli-service test:unit"
  },
  "dependencies": {
    "duration": "^0.2.2",
    "humanize-duration": "^3.20.1",
    "moment": "^2.24.0",
    "numeral": "^2.0.6",
    "uuid": "^3.3.3",
    "v-clipboard": "^2.2.2",
    "vue": "^2.6.10",
    "vue-clickaway": "^2.2.2",
    "vue-virtual-scroller": "^1.0.0-rc.2"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@storybook/addon-actions": "^5.2.1",
    "@storybook/addon-centered": "^5.2.1",
    "@storybook/addon-knobs": "^5.2.1",
    "@storybook/addon-links": "^5.2.1",
    "@storybook/addons": "^5.2.1",
    "@storybook/vue": "^5.2.1",
    "@vue/cli-plugin-babel": "^3.11.0",
    "@vue/cli-plugin-eslint": "^3.11.0",
    "@vue/cli-plugin-unit-jest": "^3.11.0",
    "@vue/cli-service": "^3.11.0",
    "@vue/test-utils": "^1.0.0-beta.20",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.6",
    "babel-preset-vue": "^2.0.2",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.2.3",
    "eslint-teamcity": "^2.2.0",
    "jest-teamcity-reporter": "^0.9.0",
    "node-sass": "^4.12.0",
    "sass-loader": "^7.3.1",
    "vue-template-compiler": "^2.6.10"
